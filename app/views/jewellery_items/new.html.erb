<h1>Create a new jewellery item</h1>

<%= form_for (@jewellery_item) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :jewellery_type %>
  <%= f.text_field :jewellery_type %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit %>
<% end %>

<% if @jewellery_item.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@jewellery_item.errors.count, "error") %> prevented this item from being saved:</h2>
    <ul>
      <% @jewellery_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
